package chap15_usefulClass;

import java.util.Calendar;

public class _18_calendar {

	public static void main(String[] args) {
		Calendar today = Calendar.getInstance();
		
		//HOUR는 오전, 오후 상관없이 0부터 11로 시간을 표시한다
		System.out.println("현재 시간 " + today.HOUR + ":" + today.MINUTE + ":" + today.SECOND);
		//HOUR_OF_DAY는 0부터 23으로 시간을 표시한다
		System.out.println("현재 시간 : " + today.HOUR_OF_DAY);
		//AM_PM은 오전(0), 오후(1)로 표시한다
		System.out.println("오전 오후 : " + today.AM_PM);
		
		System.out.println("올해 년도 : " + today.YEAR);
		//월은 0(1월)부터 시작한다
		System.out.println("현재 월 : " + today.MONTH);
		System.out.println("올해의 몇 번째 주 : " + today.WEEK_OF_YEAR);
		System.out.println("이번 달의 몇 번째 주 : " + today.WEEK_OF_MONTH);
		//요일은 1부터 시작한다, 1(일요일) ~ 7(토요일)
		System.out.println("오늘의 요일 : " + today.DAY_OF_WEEK);

	}

}
